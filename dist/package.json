    "@typescript-eslint/parser": "^6.2.1",
    "better-npm-audit": "^3.7.3",
    "colors": "^1.4.0",
    "copyfiles": "^2.4.1",
    "cross-spawn": "^7.0.3",
    "eslint": "8.46.0",
    "eslint-config-prettier": "^9.0.0",
